# Maintainer: Laurent Bercot <ska-devel@skarnet.org>
# Contributor: Eivind Uggedal <eu@eju.no>
pkgname=s6-rc
pkgver=0.5.2.3
pkgrel=0
pkgdesc="Service manager for s6-based systems"
url="http://skarnet.org/software/$pkgname/"
arch="all"
license="ISC"
options="!check"
makedepends="skalibs-dev>=2.11 execline-dev s6-dev>=2.11"
subpackages="$pkgname-static $pkgname-dev $pkgname-doc"
source="https://skarnet.org/software/s6-rc/s6-rc-$pkgver.tar.gz"

build() {
	./configure \
		--enable-shared \
		--enable-static \
		--disable-allstatic \
		--libdir=/usr/lib \
		--libexecdir="/lib/$pkgname" \
		--with-dynlib=/lib
	make
}

package() {
	make DESTDIR="$pkgdir" install
}

doc() {
	default_doc
	mkdir -p "$subpkgdir/usr/share/doc"
	cp -a "$builddir/doc" "$subpkgdir/usr/share/doc/$pkgname"
}

static() {
	default_static
	rmdir -p "$pkgdir"/usr/lib || :
}

sha512sums="
99f0b2801218425a6241692af641de7a8fc5420e7aed402cc6eef3b51287f50094ac5085028853ef8580157d6bb7f95b31878701780ebbb9fa2cc83d3800ebef  s6-rc-0.5.2.3.tar.gz
"
