# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=qt6-qtlottie
pkgver=6.2.1
pkgrel=0
pkgdesc="A family of player software for a certain json-based file format for describing 2d vector graphics animations"
url="https://qt.io/"
# s390x blocked by qt6-qtdeclarative
arch="all !s390x"
license="LGPL-2.1-only AND LGPL-3.0-only AND GPL-3.0-only AND Qt-GPL-exception-1.0"
depends_dev="
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	cmake
	perl
	"
subpackages="$pkgname-dev"
options="!check" # No tests
builddir="$srcdir/qtlottie-everywhere-src-${pkgver/_/-}"

case $pkgver in
	*_alpha*|*_beta*|*_rc*) _rel=development_releases;;
	*) _rel=official_releases;;
esac

source="https://download.qt.io/$_rel/qt/${pkgver%.*}/${pkgver/_/-}/submodules/qtlottie-everywhere-src-${pkgver/_/-}.tar.xz"

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
f95d946e88e4e72066d924fee84c10f959e014405d833ed76a056af124b428f6aac575b2d45125fa3d83beb1e10a90b6a40f15d512ce74a3e92fc46ac7e558f9  qtlottie-everywhere-src-6.2.1.tar.xz
"
