# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=qt6-qtdatavis3d
pkgver=6.2.1
pkgrel=0
pkgdesc="Qt6 Data Visualization module"
url="https://qt.io/"
# s390x blocked by qt6-qtdeclarative
arch="all !s390x"
license="LGPL-2.1-only AND LGPL-3.0-only AND GPL-3.0-only AND Qt-GPL-exception-1.0"
depends_dev="
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	cmake
	perl
	"
subpackages="$pkgname-dev"
options="!check" # No tests
builddir="$srcdir/qtdatavis3d-everywhere-src-${pkgver/_/-}"

case $pkgver in
	*_alpha*|*_beta*|*_rc*) _rel=development_releases;;
	*) _rel=official_releases;;
esac

source="https://download.qt.io/$_rel/qt/${pkgver%.*}/${pkgver/_/-}/submodules/qtdatavis3d-everywhere-src-${pkgver/_/-}.tar.xz"

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
3c223d3d530b8be50a9d16da114ef538359bc7c56de691b408a36eccc7727f2a36dffe5fe09d8e9f146d6ee7a4490cb04d8edbac6cba8606748a1f0f0bb69efa  qtdatavis3d-everywhere-src-6.2.1.tar.xz
"
