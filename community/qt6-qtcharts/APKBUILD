# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=qt6-qtcharts
pkgver=6.2.1
pkgrel=0
pkgdesc="Provides a set of easy to use chart components"
url="https://qt.io/"
arch="all !s390x" # s390x: blocked by qt6-qtdeclarative
license="LGPL-2.1-only AND LGPL-3.0-only AND GPL-3.0-only AND Qt-GPL-exception-1.0"
depends_dev="
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	cmake
	perl
	"
subpackages="$pkgname-dev"
options="!check" # No tests
builddir="$srcdir/qtcharts-everywhere-src-${pkgver/_/-}"

case $pkgver in
	*_alpha*|*_beta*|*_rc*) _rel=development_releases;;
	*) _rel=official_releases;;
esac

source="https://download.qt.io/$_rel/qt/${pkgver%.*}/${pkgver/_/-}/submodules/qtcharts-everywhere-src-${pkgver/_/-}.tar.xz"

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
8aa11f3d02090c2a9d102b1fbd31a93f983f5142150767e104aa6b2d73452e0b0352a9e1611480b244fa8e44964015a78b3b87ffb9d1ce6a36a8688939b3685f  qtcharts-everywhere-src-6.2.1.tar.xz
"
