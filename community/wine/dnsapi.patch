+/* based on ns_name_skip from libresolv */
+static int skip_name( const unsigned char **ptr, const unsigned char *end )
+{
+    const unsigned char *cp = *ptr;
+    unsigned int len;
+
+    while (cp < end && (len = *cp++))
+    {
+        switch (len & NS_CMPRSFLGS)
+        {
+        case 0:
+            cp += len;
+            continue;
+        case NS_CMPRSFLGS:
+            cp++;
+            break;
+        default:
+            return -1;
+        }
+        break;
+    }
+
+    if (cp > end) return -1;
+    *ptr = cp;
+    return 0;
+}
